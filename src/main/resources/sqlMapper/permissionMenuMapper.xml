<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.website.dao.PermissionMenuDaoMapper">
	<resultMap type="com.website.model.bo.PermissionMenuBO" id="permissionMenuBO">
		<id column="ID" property="id" />
		<result column="CLIENT_ID" property="clientId" />
		<result column="PARENT_ID" property="parentId" />
		<result column="TYPE" property="type" />
		<result column="NAME" property="name" />
		<result column="URL" property="url" />
		<result column="TAG" property="tag" />
	</resultMap>
	<resultMap type="com.website.model.vo.PermissionMenuVO" id="permissionMenuVO" extends="permissionMenuBO">
	</resultMap>

	<insert id="insert" parameterType="com.website.model.vo.PermissionMenuVO" useGeneratedKeys="true" keyProperty="id">
		INSERT permission_menu
		(CLIENT_ID,PARENT_ID,`TYPE`,`NAME`,URL,TAG)
		VALUES
		(#{clientId},#{parentId},#{type},#{name},#{url},#{tag})
	</insert>

	<insert id="insertBatch" parameterType="java.util.List">
		INSERT permission_menu
		(CLIENT_ID,PARENT_ID,`TYPE`,`NAME`,URL,TAG)
		VALUES
		<foreach collection="list" item="item" index="index" separator=",">
			(#{item.clientId},#{item.parentId},#{item.type},#{item.name},#{item.url},#{item.tag})
		</foreach>
	</insert>

	<update id="update" parameterType="com.website.model.vo.PermissionMenuVO">
		UPDATE permission_menu
		<trim prefix="SET" suffixOverrides=",">
			<if test="name != null">
				NAME=#{name},
			</if>
			<if test="url != null">
				URL=#{url},
			</if>
			<if test="tag != null">
				TAG=#{tag},
			</if>
		</trim>
		WHERE id=#{id}
	</update>

	<delete id="delete" parameterType="Integer">
		DELETE FROM permission_menu WHERE id=#{id}
	</delete>

	<delete id="deleteBatch" parameterType="java.util.List">
		DELETE FROM permission_menu WHERE id IN
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<select id="findById" parameterType="integer" resultMap="permissionMenuVO">
		SELECT
		ID,CLIENT_ID,PARENT_ID,`NAME`,URL,TAG
		FROM permission_menu
		WHERE id=#{id}
	</select>

	<select id="queryByOr" parameterType="com.website.model.vo.PermissionMenuVO" resultMap="permissionMenuVO">
		SELECT
		ID,CLIENT_ID,PARENT_ID,`TYPE`,`NAME`,URL,TAG
		FROM permission_menu
		<where>
			<if test="clientId != null">
				OR CLIENT_ID=#{clientId}
			</if>
			<if test="parentId != null">
				OR PARENT_ID=#{parentId}
			</if>
			<if test="type != null">
				OR `TYPE`=#{type}
			</if>
			<if test="name != null">
				OR `NAME`=#{name}
			</if>
			<if test="url != null">
				OR URL=#{url}
			</if>
			<if test="tag != null">
				OR TAG like CONCAT('%',#{tag},'%')
			</if>
		</where>
	</select>

	<select id="queryByAnd" parameterType="com.website.model.vo.PermissionMenuVO" resultMap="permissionMenuVO">
		SELECT
		ID,CLIENT_ID,PARENT_ID,`TYPE`,`NAME`,URL,TAG
		FROM permission_menu
		<where>
			<if test="clientId != null">
				AND CLIENT_ID=#{clientId}
			</if>
			<if test="parentId != null">
				OR PARENT_ID=#{parentId}
			</if>
			<if test="type != null">
				AND `TYPE`=#{type}
			</if>
			<if test="name != null">
				AND `NAME`=#{name}
			</if>
			<if test="url != null">
				AND URL=#{url}
			</if>
			<if test="tag != null">
				AND TAG like CONCAT('%',#{tag},'%')
			</if>
		</where>
	</select>

</mapper>